<% provide(:title, @title) %>

<div class="center">
  <div><%= gravatar_for @user %></div>
  <div><%= @user.name %></div>
  <%= render 'shared/stats' %>
</div>

<h3><%= @title %></h3>
<% if @users.any? %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 40 %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>
<% end %>
