<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 40 %>
      <%= link_to user.name, admin_user_path(user) %>
      <%= link_to "delete", user, method: :delete,
        confirm: "Are you sure?" %>
    </li>
  <% end %>
</ul>