<% provide(:title, 'Books') %>
<h1>Books</h1>

<div class="row center">
  <div class="span6 offset3">
    <%= form_tag books_path, method: "get" do %>
      <div>
        Title
        <%= text_field_tag :title %>
        Category
        <%= select_tag :category_id, 
          options_from_collection_for_select(@categories, "id", "name"),
            prompt: "All" %>
        Rating
        <%= select_tag :rating, options_for_select(Book::RATINGS) %>
        <div><%= submit_tag "Search", class: "btn" %></div>
      </div>
    <% end %>
  </div>
</div>

<ul class="users">
  <% if @books.count.zero? %>
    <div>Not found</div>
  <% else %>
    <% @books.each do |book| %>
      <li>
        <%= link_to book.title, book %>
      </li>
    <% end %>
  <% end %>
</ul>